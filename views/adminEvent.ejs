        <form method="POST" enctype="multipart/form-data">
            <h4>Add an Event & Fill it's Details:</h4>
            <div class="row">
                <div class="col-md-12">
                    <input class="form-control" type="text" name="event[caption]" placeholder="Event Name/Caption">
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <textarea name="event[shortDescript]" class="form-control" rows="2" cols="80" placeholder="Enter Short Description Here"></textarea>
                </div>
                <div style="margin-top:12px;" class="col-md-12">
                    <textarea name="event[eventDetail]" class="form-control" rows="8" cols="80" placeholder="Enter Details Here"></textarea>
                </div>
                <div class="col-md-12">
                    <h5>Add Event Date:</h5>
                    <input class="form-control" type="date" name="event[eventDate]" placeholder="abc@xyz.com">
                </div>

                <div class="col-md-12">
            <p>*Upload Jpeg image :</p>
            <input type="file" class="uploadbutton" name="img" >
