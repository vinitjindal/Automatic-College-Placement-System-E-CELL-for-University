        </ul>
        <br>
        <div class="panel panel-default">
  <!-- Default panel contents -->
  <div class="panel-heading">Click on View button to See more Details</div>

  <!-- Table -->
  <table class="table">
    <thead>
      <tr>
        <td>Company Name</td>
        <td>branch</td>
        <td>Date</td>
        <td>View</td>
        <td>Delete</td>
        <tbody>
          <% companies.forEach(function(company){ %>
          <tr>
          <td><%= company.companyName %></td>
          <td><%= company.branch %></td>          
          <td><%= company.lastDate%></td>          
          <td><form action="/user/admin/adminRecruited/<%=company._id%>" method="GET"><button class="viewButton" type="submit" value="<%=company._id %>" name="view"><i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i></i></button></form></td>
          <td><form action="/user/admin/adminView/<%=company._id%>?_method=DELETE" method="POST"><button class="viewButton" type="submit" value="<%=company._id %>"name="delete"><i class="fa fa-times" aria-hidden="true"></i></button></form></td>
            </tr>
            <% });%>
        </tbody>
      </tr>
    </thead>
  </table>
</div>
    </div>
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
