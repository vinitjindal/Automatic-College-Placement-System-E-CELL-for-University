<script>
 function check(){
    var tenthObt=document.getElementById("edu10CgpaObt").value;
    var tenthMax=document.getElementById("edu10CgpaMax").value;
    var twelthObt=document.getElementById("edu12CgpaObt").value;
    var twelthMax=document.getElementById("edu12CgpaMax").value;
    var gradObt=document.getElementById("eduGradCgpaObt").value;
    var gradMax=document.getElementById("eduGradCgpaMax").value;
    if(Number(tenthObt)>Number(tenthMax)){
        alert("10th Marks/CGPA can't exceed maximum marks.Please enter correct marks!");
        
        document.getElementById("edu10CgpaMax").focus();
        return false;
        
    }else if(Number(twelthObt)>Number(twelthMax)){
        alert("12th Marks Marks/CGPA can't exceed maximum marks.Please enter correct marks!");
        document.getElementById("edu12CgpaMax").focus();
        return false;
    }else if(Number(gradObt)>Number(gradMax)){
        alert("Graduation Marks/CGPA can't exceed maximum marks.Please enter correct marks!");
        document.getElementById("eduGradCgpaMax").focus();
        return false;
    }
     else{
         return true;
     }
 };
    
</script>
</head>
