      <td><input class="form-control" type="text" name="student[edu10Stream]" value="" required ></td>
      <td><input class="form-control" type="text" name="student[edu10Year]" minlength="4" maxlength="4" required ></td>
      <td><input class="form-control" id="edu10CgpaObt" step="0.01" type="number" name="student[edu10CgpaObt]" min="0"  required ></td>
      <td><input class="form-control" id="edu10CgpaMax" step="0.01" type="number" name="student[edu10CgpaMax]" min="0" required ></td>
    </tr>
    <tr>
