        <form method="POST" >
                        <h4>Roll No:</h4>
            <div class="row">
            <div class="col-md-4">
                    <input class="form-control" type="number" name="student[rollNo]"  value="<%=rollno%>" placeholder="First Name"disabled>
                </div>
                </div>
            <h4>Personal Details</h4>
            <div class="row">
                <div class="col-md-4">
                    <input class="form-control" type="text" name="student[firstName]"  placeholder="First Name" required>
                </div>
                <div class="col-md-4">
                    <input class="form-control" type="text" name="student[midName]"  placeholder="Middle Name">
                </div>
                <div class="col-md-4">
                    <input class="form-control" type="text" name="student[lastName]" placeholder="Last Name" required>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <h5>Mobile No: (10-Digit)</h5>
                    <input class="form-control" type="text" name="student[mobileNo]"  maxlength="10" pattern="[1-9]{1}[0-9]{9}" placeholder="Enter 10 Digit Mobile Number">
                </div>
                <div class="col-md-4">
                    <h5>Gender:</h5>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="student[gender]" class="gender-list" value="Female">Female</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="student[gender]" class="gender-list" value="Male">Male</label>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="student[gender]" class="gender-list" value="Other">Other</label>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <h5>Date of Birth:</h5>
                    <input class="form-control" type="date" name="student[dob]" required>
                </div>
                <div class="col-md-12">
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <h5>Father's Name</h5>
                    <input class="form-control" type="text" name="student[fatherName]" required>
                </div>
                <div class="col-md-4">
                    <h5>E-Mail ID</h5>
                    <input class="form-control" type="email" name="student[mailId]" placeholder="abc@xyz.com" required>
                </div>
            </div>
            <h4>Address </h4>
            <div class="row">
                <div class="col-md-2">
                    <h5>State </h5></div>
                <div class="col-md-4">
                    <select class="form-control" name="student[state]" required>
                        <optgroup label="Select Your State">
                            <option value="New Delhi" selected="">New Delhi</option>
                            <option value="Chandigarh">Chandigarh</option>
                            <option value="Mandi">Mandi</option>
                        </optgroup>
                    </select>
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <h5>Town/Village </h5></div>
                <div class="col-md-4">
                    <input class="form-control" name="student[town]" type="text">
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <h5>House No:/Flat No:</h5></div>
                <div class="col-md-4">
                    <input class="form-control" type="text" name="student[houseNo]">
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <h5>Street </h5></div>
                <div class="col-md-4">
                    <input class="form-control" type="text" name="student[street]">
                </div>
            </div>
            <div class="row">
                <div class="col-md-2">
                    <h5>Pin Code</h5></div>
                <div class="col-md-4">
                    <input class="form-control" type="text" name="student[pinCode]">
                </div>
            </div>
            <div class="container">
  <div class="panel panel-default">
<!-- Default panel contents -->
<div class="panel-heading">Enter Educational Details</div>
<div class="panel-body">
<!-- Table -->
<div class="table-responsive">
<table class="table">
  <thead>
    <tr>
      <td>School Name</td>
      <td>Type</td>
      <td>Board</td>
      <td>Stream</td>
      <td>Year of Passing</td>
      <td>Marks/CGPA Obt</td>
      <td>Max.Marks/CGPA</td>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td><input class="form-control" type="text" name="student[edu10Name]" required ></td>
      <td><select class="form-control" name="student[edu10Type]" required>
                        <option value="10th" selected="">10th </option>
                        <option value="+2 or equivalent">+2 or equivalent</option>
                        <option value="Under Graduation">Under Graduation</option>
                    </select></td>
      <td><input class="form-control" type="text" name="student[edu10Board]" value="" required ></td>
      <td><input class="form-control" type="text" name="student[edu10Stream]" value="" required ></td>
      <td><input class="form-control" type="text" name="student[edu10Year]" required ></td>
      <td><input class="form-control" step="0.01" type="number" name="student[edu10CgpaObt]" min="0" max="1000" required ></td>
      <td><input class="form-control" step="0.01" type="number" name="student[edu10CgpaMax]" min="0" max="1000" required ></td>
    </tr>
    <tr>
      <td><input class="form-control" type="text" name="student[edu12Name]" required ></td>
      <td><select class="form-control" name="student[edu12Type]" required >
                        <option value="10th" >10th </option>
                        <option value="+2" selected >+2 or equivalent</option>
                        <option value="Under Graduation">Under Graduation</option>
                    </select></td>
      <td><input class="form-control" type="text" name="student[edu12Board]" value="" required ></td>
      <td><input class="form-control" type="text" name="student[edu12Stream]" value="" required ></td>
      <td><input class="form-control" type="text" name="student[edu12Year]" required ></td>
      <td><input class="form-control" step="0.01" type="number" name="student[edu12CgpaObt]" required min="0" max="1000"></td>
      <td><input class="form-control" step="0.01" type="number" name="student[edu12CgpaMax]" required min="0" max="1000"></td>
    </tr>
    <tr>
      <td><input class="form-control" type="text" name="student[eduGradName]" required ></td>
      <td><select class="form-control" name="student[eduGradType]" required>
                        <option value="10th" selected="">10th </option>
                        <option value="+2">+2 or equivalent</option>
                        <option value="Under Graduation" selected>Under Graduation</option>
                    </select></td>
      <td><input class="form-control" type="text" name="student[eduGradBoard]" value="" required ></td>
      <td><input class="form-control" type="text" name="student[eduGradStream]" value="" required ></td>
      <td><input class="form-control" type="text" name="student[eduGradYear]" required ></td>
      <td><input class="form-control" step="0.01" name="student[eduGradCgpaObt]" type="number" min="0" max="1000" required ></td>
      <td><input class="form-control" step="0.01" name="student[eduGradCgpaMax]" type="number" min="0" max="1000" required ></td>
    </tr>
  </tbody>
</table>
</div>
</div>
</div>

    <div class="upload">
            <div class="row">
    <div class="col-md-6">
        <p>*Upload single PDF document consisting of :</p>
        <ul>
            <li>Resume (CV)</li>
            <li>10th Certificate</li>
            <li>+2 Certificate</li>
            <li>College Semester Grade Cards</li>
        </ul>
        <input type="file" class="uploadbutton" name="doc" value="">
    </div>
</div>
    </div>
    <div class="row">
        <div style="margin-bottom:10px;" class="col-md-12">
          <h5>Enter Technical Skills </h5>
            <textarea class="skillTag" name="student[skillTag]" rows="8" cols="80" required></textarea>
        </div>
        <div style="margin-bottom:10px;" class="col-md-6">
          <h5>Enter Github Link </h5>
            <input class="form-control" type="text" name="student[gitHub]" >
        </div>
    </div>
            <div class="row">
                <div class="col-md-12 lower">
                    <button class="btn btn-primary" type="submit">Save </button>
                </div>
            </div>
        </form>
    </div>
    <script src="/assets/js/jquery.min.js"></script>
    <script src="/assets/bootstrap/js/bootstrap.min.js"></script>
    <script src="/assets/js/jquery.caret.min.js"></script>
    <script src="/assets/js/jquery.tag-editor.js"></script>
    <script type="text/javascript">

    $(document).on('keyup keypress', 'form input[type="text"]', function(e) {
      if(e.which == 13) {
        e.preventDefault();
        return false;
      }
    });
    $('.skillTag').tagEditor({
        delimiter: ', ', /* space and comma */
        placeholder: 'e.g.,C++,Android etc'
    });
    $('.gender-list').on('change', function() {
        $('.gender-list').not(this).prop('checked', false);  
    });
    
    
    </script>
</body>

